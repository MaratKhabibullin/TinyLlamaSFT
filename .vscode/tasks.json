{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "llmdebug:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"python": {
				"file": "main.py",
				"args": [ 
					"--model_name", "test",
				 	"--mode", "training",
					"--dataset_size", "10"
				],
			},
			"dockerRun": {
				"volumes": [
					{
						"localPath": "${workspaceFolder}/cache",
						"containerPath": "/cache",
						"permissions" : "rw"
					}
				]
			}
		}
	]
}